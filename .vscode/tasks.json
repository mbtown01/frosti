{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start Debug Containers",
            "type": "shell",
            "isBackground": true,
            "command": "docker-compose",
            "args": [
                "--file", "docker/docker-compose.yaml",
                "run", 
                "-p", "3001:3001", 
                "-p", "5000:5000",
                "--entrypoint",
                "/bin/bash -c \"cd /usr/local/rpt && python3 -m ptvsd --host 0.0.0.0 --port 3001 --wait -m src --sim\"",
                "rpt"
            ],
            "problemMatcher": [
                {
                  "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^.*$",
                    "endsPattern": "^Starting rpt-grafana.*$",
                  }
                }
            ]
        }
    ]
  }

