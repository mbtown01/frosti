    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Local Fake Hardware",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "module": "src",
            "console": "integratedTerminal",
            "stopOnEntry": false,
            "args": ["--sim"],
        },
        {
            "name": "Python: Local Real Hardware",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "module": "src",
            "console": "integratedTerminal",
            "stopOnEntry": false,
        },
        {
            "name": "Python: Remote Attach",
            "type": "python",
            "request": "attach",
            "port": 3000,
            "host": "raspberrypi",
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "/home/pi/rpt"
                }
            ],
        },
    ]
}