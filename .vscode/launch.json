    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Local Hardware",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "module": "frosti",
            "console": "integratedTerminal",
            "stopOnEntry": false,
            "args": [],
        },
        {
            "name": "Python: Database upgrade",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "program": "scripts/upgrade-db.py",
            "console": "integratedTerminal",
            "stopOnEntry": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Python: Local FROSTI Launcher",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "program": "${file}",
            "console": "integratedTerminal",
            "stopOnEntry": false,
            "args": [
                "--debug",
                "--dev"
            ],
        },
        {
            "name": "Python: Build Image",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "program": "scripts/build-image.py",
            "console": "integratedTerminal",
            "stopOnEntry": false,
            "args": [
                "--input",
                "/home/mbtowns/2020-12-02-raspios-buster-armhf-lite.img",
                "--output",
                "/home/mbtowns/test.img",
                "--hostname",
                "frosti-dev",
                "--debug",
            ],
        },
        {
            "name": "Python: Local Attach",
            "type": "python",
            "request": "attach",
            "port": 3001,
            "host": "localhost",
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "/usr/local/frosti"
                }
            ],
        },
    ]
}