    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Local FROSTI Launcher",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "module": "frosti",
            "console": "integratedTerminal",
            "stopOnEntry": false,
            "args": [
                "--hardware",
                "v6",
                // "--watchdog",
                // "5",
            ],
        },
        {
            "name": "Python: Build Image",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "program": "scripts/build-image.py",
            "console": "integratedTerminal",
            "stopOnEntry": false,
            "args": [
                "--input",
                "/home/mbtowns/2020-12-02-raspios-buster-armhf-lite.img",
                "--output",
                "/home/mbtowns/test.img",
                "--hostname",
                "frosti-dev",
                "--debug",
            ],
        },
    ]
}